<style>
    * {box-sizing:border-box}
    body {font-family: Verdana,sans-serif;}
    .mySlides {display:none}

    /* Slideshow container */
    .slideshow-container {
        max-width: 100%;
        position: relative;
        margin: auto;
    }
    .butt-wrapper
    {

    }

    #button-sing-up a
    {
        background-color: #FE5D59;
        text-decoration: none;
        color: white;
        float: left;
        font-weight: 900;
        font-size: 12px;
        padding: 18px;
        margin: 5px;
        width: 150px;
        border-radius: 15px;
        margin-left: 100px;

    }

    #button-learn-more a
    {
        border: solid 4px;
        border-radius: 15px;
        background-color:#01A2A6;
        color: white;
        border-color: #01A2A6;
        text-decoration: none;
        font-size: 12px;
        padding: 15px;
        padding-left: 28px;
        padding-right: 28px;
        width: 200px;
    }

    /* Caption text */
    .text {
        color: #f2f2f2;
        font-size: 40px;
        padding: 8px 12px;
        position: absolute;
        top: 300px;
        left: 520px;
        width: 40%;
        text-align: center;
    }

    /* Number text (1/3 etc) */
    .numbertext {
        color: #f2f2f2;
        font-size: 12px;
        padding: 8px 12px;
        position: absolute;
        top: 0;
    }

    /* The dots/bullets/indicators */
    .dot {
        height: 13px;
        width: 13px;
        margin: 0 2px;
        background-color: #bbb;
        border-radius: 50%;
        display: inline-block;
        transition: background-color 0.6s ease;
    }



    /* Fading animation */
    .fade {
        -webkit-animation-name: fade;
        -webkit-animation-duration: 1.5s;
        animation-name: fade;
        animation-duration: 1.5s;
    }

    @-webkit-keyframes fade {
        from {opacity: .4}
        to {opacity: 1}
    }

    @keyframes fade {
        from {opacity: .4}
        to {opacity: 1}
    }

    /* On smaller screens, decrease text size */
    @media only screen and (max-width: 300px) {
        .text {font-size: 11px}
    }

    .img-slide
    {
        width: 100%;
    }

</style>

