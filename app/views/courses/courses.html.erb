<style>

  .main-grid{
      margin: 0 auto;
      width: 80%;
      box-shadow: 0px 0px 5px #868888;
      padding: 20px;
  }

  .cours-box{
      display: inline-block;
      width: 320px;
      height: 500px;
      margin:2%;
      border: solid 1px;
      text-align: center;
  }

  .cours-box>a>img{
      width: 98%;
  }

  p.title{
      text-decoration: none;
      padding: 10px;
  }

  p.description{
      padding: 10px;
  }
</style>


<div class="main-grid">
  <% @courses.each do |cours| %>
      <div class="cours-box">
        <a href="/courses/<%= cours.id %>">
          <%= image_tag('LanguageBooks.jpg') %>
          <p class="title"><%= cours.name_lesion %></p>
          <p class="description"><%= cours.description %></p>
        </a>
      </div>
  <% end %>
</div>