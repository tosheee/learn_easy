<p id="notice"><%= notice %></p>

<h1>Listing Admin Lessons</h1>

<table class = "table table-bordered table-striped">
  <thead>
    <tr>
      <th>View</th>
      <th>Conversation</th>
      <th>Words</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @admin_lessons.each do |admin_lesson| %>
      <tr>
        <td><%= admin_lesson.view %></td>
        <td>
          <% eval(admin_lesson.conversation).map do |k, v| %>
              <%= "#{k} --- #{v}" %>
              <br>
          <% end %>
              </td>
        <td><%= admin_lesson.words %></td>
        <td><%= link_to 'Show', admin_lesson %></td>
        <td><%= link_to 'Edit', edit_admin_lesson_path(admin_lesson) %></td>
        <td><%= link_to 'Destroy', admin_lesson, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

